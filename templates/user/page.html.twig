{% extends 'layout.html.twig' %}

{% block title %}{{ user.username }}{% endblock %}

{% block content %}

<div class="container-fluid">
    <h1>{{ user.username }}</h1>
    <div class="row">
        <div class="col-md-3">
            {{ user.email }}
            {% if user.image %}<img src="{{ asset('uploads/images/' ~ user.image) }}" class="img img-thumbnail">{%  endif %}
        </div>
        <div class="col-md-3">
            {% for article in user.articles %}
                <h1><a href="{{ path('article_show', {id : article.id}) }}">{{ article.title }}</a></h1>
                <small> publi√© par {{ article.user.username }} le {{ article.datepubli|date('d/m/Y') }}</small>
                <p>{{ article.content }}</p>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
