{# templates/layout.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{%  endblock %}</title>
    {% block css %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    {% endblock %}
</head>
<body>
    <!-- Grey with black text -->
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <a class="navbar-brand" href="#">Symfony</a>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link"  href="{{ path('home') }}">Accueil</a>
            </li>
            <li class="nav-item">
                <a class="nav-link"  href="{{ path('bonjourNom', {nom: 'toto'}) }}">Bonjour Toto</a>
            </li>
            <li class="nav-item">
                <a class="nav-link"  href="{{ path('addArticle') }}">Ajouter un article</a>
            </li>
            <li class="nav-item">
                <a class="nav-link"  href="{{ path('articles_recents') }}">Articles récents</a>
            </li>
            <li class="nav-item">
                <a class="nav-link"  href="{{ path('categorie_add') }}">Ajout de catégories</a>
            </li>
            <li class="nav-item">
                <a class="nav-link"  href="{{ path('categorie_last5') }}">Catégories récentes</a>
            </li>
            {# cet élément de menu n'apparaitra que si l'utilisateur est connecté et a le ROLE_ADMIN #}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('logout') }}">logout</a>
                </li>
            {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('login') }}">login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('register') }}">register</a>
                </li>
            {% endif %}
            {# cet élément de menu n'apparaitra que si l'utilisateur est connecté et a le ROLE_ADMIN #}
            {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('adminHome') }}">Zone admin</a>
                </li>
            {% endif %}
        </ul>
    </nav>

    {%  block content %}{% endblock %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    {%  block javascript %}{% endblock %}
</body>
</html>