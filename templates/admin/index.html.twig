{% extends 'layout.html.twig' %}

{% block title %}Hello Admin!{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello Admin!</h1>
    {# pour afficher tout type de message flash #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <div class="row">
        <div class="col-md-3">
            <a href="{{ path('adminAddArticle') }}">Ajouter un article</a>
        </div>

        <div class="col-md-3">
            <ul class="list-group">
                {% for article in articles %}
                    <li class="list-group-item"><a href="{{ path('adminUpdateArticle', {id: article.id}) }}">{{ article.title }}</a></li>
                {% endfor %}
            </ul>

        </div>
    </div>
</div>
{% endblock %}
